#include <stdio.h>

int addDigit(int a, int b);

int main(void)
{
    int a = 0;
    int b = 0;
    printf("-= Function for SUM of two digitals =-\n\n");
    printf("Insert value of \" a \":\n ");
    scanf("%d", &a);

    printf("Insert value of \" b \":\n ");
    scanf("%d", &b);

    int result = addDigit(a, b);
    printf("%d + %d = %d\n", a, b, result);

    return 0;
}

int addDigit(int a, int b)
{
    return a + b;
}
